# Copy to .env and fill the values
DATABASE_URL=postgres://user:password@localhost:5432/nexa_dev
PORT=4000
JWT_SECRET=replace-with-a-secure-secret
JWT_EXPIRES_IN=15m
FRONTEND_URL=http://localhost:8000
NODE_ENV=development
COOKIE_NAME=nexa_token
COOKIE_SAMESITE=lax # options: lax, strict, none  (set to 'none' for cross-origin cookie auth; requires HTTPS)
ALLOW_NULL_ORIGIN=true # set to false in production; when true allows file:// or null origin for dev/testing
